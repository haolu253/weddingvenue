@{
    ViewBag.Title = "Trang chủ";
}

<div class="container-fluid">
    <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="max-height: 500px;width:100%" src="~/Content/Images/slide2.jpg">
            </div>
            <div class="carousel-item">
                <img style="max-height: 500px;width:100%" src="~/Content/Images/slide1.jpg">
            </div>
            <div class="carousel-item">
                <img style="max-height: 500px;width:100%" src="~/Content/Images/slide3.jpg">
            </div>
            <div class="carousel-item">
                <img style="max-height: 500px;width:100%" src="~/Content/Images/slide4.jpg">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
