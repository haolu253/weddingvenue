@model IEnumerable<WebNC.Models.MonAn>
@using WebNC.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var MENU = (List<Menu>)ViewBag.MENU;
}

<h2 style="text-align:center">QUẢN LÝ MÓN ĂN</h2>

<form action="@Url.Action("Searching","MonAn")">
    <label>Tên món:</label>
    <input name="tenmon" class="form-control" />
    <label>Thực đơn:</label>
    <select name="menu" class="form-control">
        @for (int i = 0; i < MENU.Count; i++)
        {
            <option value="@MENU[i].MenuID">@MENU[i].TenMenu</option>
        }
    </select>
    <input id="search" type="submit" class="btn btn-info" style="background-color:#d9b08c;margin-bottom:10px;margin-top:5px" value="Tìm" />
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenMonAn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaMonAn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhMonAn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Menu.TenMenu)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.TenMonAn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaMonAn)
            </td>
            <td>
                <img src="~/Content/Images/MonAn/@item.HinhMonAn" class="img-thumbnail" style="width:300px; height:200px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.TenMenu)
            </td>
            <td>
                <input type="button" class="btn btn-info" style="background-color:#d9b08c" value="Sửa" onclick="location.href='@Url.Action("Edit", "MonAn", new { id = item.MonAnID })'" />
                <input type="button" class="btn btn-info" style="background-color:#d9b08c" value="Chi tiết" onclick="location.href='@Url.Action("Details", "MonAn", new { id = item.MonAnID })'" />
                <input type="button" class="btn btn-info" style="background-color:#d9b08c" value="Xóa" onclick="location.href='@Url.Action("Delete", "MonAn", new { id = item.MonAnID })'" />
            </td>
        </tr>
    }

</table>
<div class="container" style="text-align:right">
    <input type="button" class="btn btn-info" style="background-color:#d9b08c" value="Thêm món" onclick="location.href='@Url.Action("Create", "MonAn")'" />
</div>